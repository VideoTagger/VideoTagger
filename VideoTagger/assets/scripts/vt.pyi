from abc import ABCMeta, abstractmethod
from typing import Optional

class Script(metaclass=ABCMeta):
    def __init__(self: Script) -> None: ...
    @abstractmethod
    def has_progress(self: Script) -> bool: ...
    @abstractmethod
    def on_run(self: Script) -> None:
        """This method doesn't need to be implemented since it isn't purely virtual"""
        ...

    def get_progress(self: Script) -> float: ...
    def set_progress(self: Script, value: float) -> None: ...
    def get_progress_info(self: Script) -> str: ...
    def set_progress_info(self: Script, value: str) -> None: ...

    progress = property(get_progress, set_progress)
    progress_info = property(get_progress_info, set_progress_info)

class Timeline:
    def __init__(self: Timeline) -> None: ...
    def __repr__(self: Timeline) -> str: ...
    @property
    def segment_count(self: Timeline) -> int: ...

class Project:
    def __init__(self: Project, *args, **kwargs) -> None: ...
    @property
    def name(self: Project) -> str: ...

def current_project() -> Optional[Project]: ...

